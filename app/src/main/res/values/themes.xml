<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MarvelHeroes" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/back</item>
        <item name="colorPrimaryVariant">@color/back</item>
        <item name="colorOnPrimary">@color/back</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/main</item>
        <item name="colorSecondaryVariant">@color/main</item>
        <item name="colorOnSecondary">@color/main</item>
        <item name="windowNoTitle">true</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorSecondaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.SplashTheme" parent="Theme.MarvelHeroes">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowBackground">@drawable/gradient</item>
    </style>

    <style name="MaterialTextView" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerSize">50%</item>
        <item name="cornerFamilyTopLeft">rounded</item>
    </style>

    <style name="Theme.MarvelHeroes.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark" />

    <style name="Theme.MarvelHeroes.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>